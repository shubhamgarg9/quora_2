<%= link_to 'topics' , '/topics'  %>
<%= link_to 'users' , '/users'  %>

<h1>Home Page</h1>

<%= form_tag '/create_question' do %>
Ask a question:   <%= text_field_tag :content  %>
    Topic: <%= text_field_tag :topic  %>
    <%= submit_tag :submit  %>
<% end %>

<ul>
<% @questions.each do |question| %>
    <li><%= question.content  %> , <b><%= question.user.email  %></b> , <%= question.created_at  %></li><br>
      <%= render 'answer' , :question => question %>
      <%= render 'answers_available' , :question => question  %>
<% end %>
</ul>