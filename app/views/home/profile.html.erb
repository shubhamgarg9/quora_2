<div class="profilePage">
<%= form_tag url_for(controller: 'home', action: 'update_profile'), :multipart => true do %>


    <%= text_field_tag :email, current_user.email %>
    <br>

	  <img src="/uploads/<%= current_user.profile_picture %>" class="img-rounded" alt="Cinque Terre" width="304" height="236">
      <!-- <img src="/uploads/<%= current_user.profile_picture %>" > -->
      <br>
    <%= file_field_tag :profile_picture %>


    <br>


    <%= submit_tag "Update" %>


<% end %>

</div>